<section id="contact" ng-show="views.activeView() == 'search-form'" ng-controller="SearchController as search">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">ПОИСК И ПОКУПКА АВИАБИЛЕТОВ</h2>
                <h3 class="section-subheading text-muted">ООО "ФазИнжиниринг" {{search.supportPhone()}}</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form name="searchForm" class="my-form" ng-submit="search.validate() && search.start()" novalidate>
                    @*<span class="label-info">
                        Valid: {{searchForm.$valid}}
                    </span>*@
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control large-textbox" id="from"
                                       placeholder="Место вылета" required>
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control large-textbox" id="to"
                                       placeholder="Место назначения" required>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control large-textbox" id="fromDate"
                                       ng-model="search.wayFrontDate" placeholder="Дата вылета" required ng-pattern='/^(\d{2})\.(\d{2})\.(\d{4})$/'>
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control large-textbox" id="toDate"
                                       ng-model="search.wayBackDate" placeholder="Дата возвращения (не обязательно)" ng-pattern='/^(\d{2})\.(\d{2})\.(\d{4})$/'>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>

                        <div class="clearfix"></div>

                        <div class="col-lg-12 text-center form-inline">

                            <div class="panel panel-default">

                                <div class="panel-body large-textbox">
                                    <div class="form-group col-md-6">
                                        <label class="text-muted">Класс обслуживания:</label>
                                        <select ng-model="search.serviceClass" class="form-control input-lg">
                                            <option value="E">Эконом</option>
                                            <option value="B">Бизнес</option>
                                        </select>
                                    </div>
                                    <div class="col-md-1"></div>
                                    <div class="form-group col-md-4">
                                        <label class="text-muted">Пассажиры:</label>
                                        <select ng-model="search.adults" class="form-control input-lg">
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                        </select>

                                    </div>

                                    @*<div class="col-md-1"></div>
                            <div class="form-group col-md-2" style="display: none;">

                                <label class="text-muted">Дети:</label>
                                <select ng-model="childs" class="form-control">
                                    <option value="0">0</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                </select>
                            </div>
                            <div class="col-md-1"></div>
                            <div class="form-group col-md-2" style="display: none;">

                                <label class="text-muted">Младенцы:</label>
                                <select ng-model="infants" class="form-control">
                                    <option value="0">0</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                </select>


                            </div>*@

                                </div>
                            </div>

                        </div>

                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                            <button type="submit" class="btn btn-xl">НАЙТИ</button>
                            @if (IsDebug)
                            {
                                <button type="button" ng-click="search.testFill()" class="btn btn-warning">Заполнить</button>
                            }

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>